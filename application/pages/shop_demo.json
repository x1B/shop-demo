{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop-demo/dummy-articles-activity",
            "features": {
               "articles": {
                  "resource": "articles"
               }
            }
         }
      ],

      "searchBox": [
      ],

      "contentA": [
         {
            "widget": "shop-demo/article-browser-widget",
            "features": {
               "articles": {
                  "resource": "articles"
               },
               "selection": {
                  "resource": "selectedArticle"
               }
            }
         }
      ],
      "contentB": [
         {
           "widget": "shop-demo/article-teaser-widget",
           "features": {
              "article": {
                 "resource": "selectedArticle"
              },
              "confirmation": {
                 "action": "addArticle"
              }
           }
        },
        {
           "widget": "shop-demo/shopping-cart-widget",
           "features": {
              "article": {
                 "resource": "selectedArticle",
                 "onActions": [ "addArticle" ]
              },
              "order": {
                 "target": "finishOrder"
              }
           }
        },
        {
           "widget": "amd:laxar-developer-tools-widget",
           "features": {
              "open": {
                 "onGlobalMethod": "laxarShowDeveloperTools"
              },
              "button": {
                 "enabled": false
              }
            }
         }
      ]
   }
}
