{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop-demo/dummy-articles-activity",
            "features": {
               "articles": {
                  "resource": "articles"
               }
            }
         },
         {
            "widget": "laxar-log-activity"
         }
      ],

      "searchBox": [
         {
            "widget": "shop-demo/article-search-box-widget",
            "features": {
               "navigation": {
                  "parameterName": "search"
               },
               "articles": {
                  "resource": "articles"
               },
               "filteredArticles": {
                  "resource": "filteredArticles"
               }
            }
         }
      ],

      "contentA": [
         {
            "widget": "shop-demo/article-browser-widget",
            "features": {
               "articles": {
                  "resource": "filteredArticles"
               },
               "selection": {
                  "resource": "selectedArticle"
               }
            }
         }
      ],
      "contentB": [
         {
            "widget": "laxar-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en": "<i class='fa fa-shopping-cart'></i> Buy stuff!",
                     "de": "<i class='fa fa-shopping-cart'></i> Kaufen Sie!"
                  }
               }
            }
         },
         {
            "widget": "shop-demo/article-teaser-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle"
               },
               "confirmation": {
                  "action": "addArticle"
               }
            }
         },
         {
            "widget": "laxar-command-bar-widget",
            "features": {
               "buttons": [
                  {
                     "i18nHtmlLabel": "<i class='fa fa-shopping-cart'></i> rein damit",
                     "action": "addArticle"
                  }
               ]
            }
         }
      ],
      "contentC": [
         {
            "widget": "laxar-accordion-widget",
            "id": "accordion",
            "features": {
               "areas": [
                  {
                     "name": "first",
                     "i18nHtmlLabel": "First Area"
                  },
                  {
                     "name": "second",
                     "i18nHtmlLabel": "Second Area"
                  }
               ]
            }
         }
      ],
      "accordion.first": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               },
               "order": {
                  "target": "confirmation"
               }
            }
         }
      ],
      "accordion.second": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               },
               "order": {
                  "target": "confirmation"
               }
            }
         }
      ]
   }
}
