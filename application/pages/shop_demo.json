{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop-demo/dummy-articles-activity",
            "features": {
               "articles": {
                  "resource": "articles"
               }
            }
         }
      ],

      "searchBox": [
         {
            "widget": "shop-demo/article-search-box-widget",
            "features": {
               "articles": {
                  "resource": "articles"
               },
               "filteredArticles": {
                  "resource": "filteredArticles"
               }
            }
         }
      ],

      "contentA": [
         {
            "widget": "shop-demo/ng2-test-widget",
            "id": "ng2Test",
            "features": {
               "areaName": "ng2Area"
            }
         },
         {
            "widget": "shop-demo/article-browser-widget",
            "features": {
               "articles": {
                  "resource": "filteredArticles"
               },
               "selection": {
                  "resource": "selectedArticle"
               }
            }
         }
      ],
      "ng2Test.ng2Area": [
         {
            "widget": "shop-demo/ng2-test-widget",
            "id": "ng2Test2",
            "features": {
               "areaName": "wurst"
            }
         }
      ],
      "ng2Test2.wurst": [
         {
            "widget": "shop-demo/ng2-test-widget",
            "features": {
               "areaName": "egal"
            }
         }
      ],
      "contentB": [
         {
            "widget": "shop-demo/article-teaser-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle"
               },
               "confirmation": {
                  "action": "addArticle"
               }
            }
         }
      ],
      "contentC": [
         {
            "widget": "ax-accordion-widget",
            "id": "accordion",
            "features": {
               "areas": [
                  {
                     "name": "first",
                     "i18nHtmlLabel": "First Area"
                  },
                  {
                     "name": "second",
                     "i18nHtmlLabel": "Second Area"
                  }
               ]
            }
         }
      ],
      "accordion.first": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               },
               "order": {
                  "target": "confirmation"
               }
            }
         }
      ],
      "accordion.second": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               },
               "order": {
                  "target": "confirmation"
               }
            }
         }
      ]
   }
}
