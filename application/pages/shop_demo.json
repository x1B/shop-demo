{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop-demo/dummy-articles-activity",
            "features": {
               "articles": {
                  "resource": "articles"
               }
            }
         }
      ],

      "searchBox": [
         {
            "widget": "shop-demo/article-search-box-widget",
            "features": {
               "navigation": {
                  "parameterName": "search"
               },
               "articles": {
                  "resource": "articles"
               },
               "filteredArticles": {
                  "resource": "filteredArticles"
               }
            }
         }
      ],

      "contentA": [
         {
            "widget": "shop-demo/article-browser-widget",
            "features": {
               "articles": {
                  "resource": "filteredArticles"
               },
               "selection": {
                  "resource": "selectedArticle"
               }
            }
         }
      ],
      "contentB": [
         {
            "widget": "shop-demo/article-teaser-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle"
               },
               "confirmation": {
                  "action": "addArticle"
               }
            }
         }
      ],
      "contentC": [
         {
            "widget": "ax-accordion-widget",
            "id": "accordion",
            "features": {
               "areas": [
                  {
                     "name": "first",
                     "i18nHtmlLabel": "First Area"
                  },
                  {
                     "name": "second",
                     "i18nHtmlLabel": "Second Area"
                  }
               ]
            }
         }
      ],
      "accordion.first": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               },
               "order": {
                  "target": "confirmation"
               }
            }
         }
      ],
      "accordion.second": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               },
               "order": {
                  "target": "confirmation"
               }
            }
         }
      ],
      "details.content": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "enabled": false,
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               },
               "order": {
                  "target": "confirmation"
               }
            }
         }
      ],
      "popups": [
         {
            "widget": "ax-details-layer-widget",
            "enabled": false,
            "id": "details",
            "features": {
               "area": {
                  "name": "content"
               },
               "open": {
                  "onActions": [ "addArticle" ]
               },
               "closeIcon": {
                  "enabled": true
               },
               "backdropClose": {
                  "enabled": true
               }
            }
         }
      ]
   }
}
