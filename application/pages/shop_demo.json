{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop-demo/dummy-articles-activity",
            "features": {
               "articles": {
                  "resource": "articles"
               }
            }
         }
      ],

      "searchBox": [

      ],

      "contentA": [
         {
            "widget": "shop-demo/article-browser-widget",
            "features": {
               "articles": {
                  "resource": "articles"
               },
               "selection": {
                  "resource": "selectedArticle",
                  "action": "addArticle"
               }
            }
         }
      ],
      "contentB": [
        {
           "widget": "shop-demo/shopping-cart-widget",
           "features": {
              "article": {
                 "resource": "selectedArticle",
                 "onActions": [ "addArticle" ]
              },
              "order": {
                 "target": "finishOrder"
              }
           }
        }
      ]
   }
}
